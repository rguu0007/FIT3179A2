{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 800,
    "height": 450,
    "title": {"text": "Fertility rate over time", "fontSize": 25},
    "data": {"url": "https://raw.githubusercontent.com/rguu0007/FIT3179W10/master/data/fertility_rate_long.csv"},
    "encoding": {
      "x": {"field": "Year", "type": "temporal"},
      "y": {"field": "Fertility_rate", "type": "quantitative", "title": "Fertility Rate"},
      "color": {"field": "Country", "type": "nominal","scale": {"scheme": "tableau10"}}
    },
    "params": [
      {
        "name": "selectedCountries",
        "value": null, 
        "bind": {
          "input": "select",
          "options": [null, "_World", "China", "Australia", "Niger",  "Yemen", "United States of America", "South Korea"], 
          "labels": ["Show all", "World", "China", "Australia", "Niger",  "Yemen", "United States of America", "South Korea"],
          "name": "Select Countries: "
        }
      }
    ],
    "transform": [
      {"filter": "datum.Country == 'China' || datum.Country == 'Australia' || datum.Country == 'Niger' || datum.Country == 'Yemen' || datum.Country == '_World' || datum.Country == 'United States of America' || datum.Country == 'South Korea'"},
      {"filter": "null == selectedCountries || datum.Country == selectedCountries"}
    ],
    "layer": [
      {
        "mark": {"type": "line", "interpolate": "monotone"}
      }, 
      {
        "params": [
          {
            "name": "hover",
            "select": {"type": "point", "on": "mouseover", "clear": "mouseout"}
          }
        ],
        "mark": {"type": "circle", "tooltip": true},
        "encoding": {
          "opacity": {
            "condition": {"test": {"param": "hover", "empty": false}, "value": 1},
            "value": 0
          },
          "size": {
            "condition": {"test": {"param": "hover", "empty": false}, "value": 48},
            "value": 100
          },
          "tooltip": [
            {"field": "Country", "type": "nominal", "title": "Country"},
            {"field": "Year", "type": "temporal","timeUnit": "year", "title": "Year" 
            },
            {
              "field": "Fertility_rate",
              "type": "quantitative",
              "title": "Fertility Rate"
            }
          ]
        }
      }
    ],
    "config": {
      "axisX": {"grid": false}
    }
  }